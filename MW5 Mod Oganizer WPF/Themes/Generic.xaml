<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:customControls="clr-namespace:MW5_Mod_Organizer_WPF.CustomControls">
    <Style TargetType="{x:Type customControls:SettingsButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type customControls:SettingsButton}">
                    <Grid>
                        <Image Width="50">
                            <Image.Source>
                                <DrawingImage Drawing="{Binding DrawingGroup, RelativeSource={RelativeSource AncestorType={x:Type customControls:SettingsButton}}}"/>
                            </Image.Source>
                        </Image>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>