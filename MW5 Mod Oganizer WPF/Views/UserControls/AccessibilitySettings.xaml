<UserControl x:Class="MW5_Mod_Organizer_WPF.Views.UserControls.AccessibilitySettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MW5_Mod_Organizer_WPF.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="Beige">
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Updates" Foreground="#484D54" FontSize="20" FontWeight="Bold"/>
            <Separator Margin="0 0 0 10"/>
            <CheckBox Content="Show update button on application start if update is available (Recommended)" IsChecked="{Binding BReceiveUpdate}" Foreground="#484D54"/>
        </StackPanel>
    </Grid>
</UserControl>
