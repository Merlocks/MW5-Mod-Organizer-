<Window x:Class="MW5_Mod_Organizer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
        xmlns:local="clr-namespace:MW5_Mod_Organizer_WPF.ViewModels"
        mc:Ignorable="d" FontSize="14"
        Title="MW5 Mod Organizer" Height="720" Width="1345" Background="#FFF5F5F5" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <DataTemplate x:Key="DataGridItemTemplate1">
            <Grid/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <!--Grid definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Layout-->
        <!--<Rectangle 
            Grid.Column="0" 
            Grid.Row="2" 
            Grid.RowSpan="2" 
            Fill="#FFF9F9F9">
        </Rectangle>
        <Rectangle 
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            Fill="#FFF9F9F9">
        </Rectangle>-->
        <Border Grid.Column="0" 
                Grid.Row="2" 
                Grid.RowSpan="2"
                Background="Transparent">
        </Border>
        <Border Grid.Column="0"
                Grid.ColumnSpan="3"
                Grid.Row="1"
                Background="#FFF9F9F9">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="#FFD8D8D8" ShadowDepth="5" Direction="270" Opacity="0.3"/>
            </Border.Effect>
        </Border>

        <!--Toolbar menu-->
        <StackPanel Grid.Row="0" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="3" 
                    Orientation="Horizontal"
                    Background="#FFF9F9F9">
            <Button x:Name="ButtonExport" 
                    Content="Export loadorder"
                    Click="ButtonExport_Click"
                    Style="{StaticResource ToolbarMenuButtonTheme}"/>
            <Button x:Name="ButtonProfiles"
                    Content="Profiles"
                    Style="{DynamicResource ToolbarMenuButtonTheme}"/>
        </StackPanel>

        <!--Logo-->
        <TextBlock Text="MW5MO"
                   Grid.Row="1"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="left"
                   Foreground="#69717d"
                   FontSize="22"
                   Margin="20, 0, 0, 0"
                   Visibility="Hidden"/>
        <Image Source="Images/logo2.png"
               Grid.Row="1"
               Height="40"
               RenderOptions.BitmapScalingMode="Fant"/>

        <!--File path-->
        <StackPanel Orientation="Vertical"
                    Grid.Column="1"
                    Grid.Row="1">
            <!--Primary mod folder-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0 15 0 0">
                <TextBox x:Name="TextBoxFileExplorer"
                         Width="500"
                         Height="25"
                         VerticalContentAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="10, 0, 0, 0"
                         IsReadOnly="True"
                         Style="{StaticResource TextBoxTheme}"/>
                <Button x:Name="ButtonOpenFolder" Content="Open folder"
                        Width="100"
                        Height="25"
                        VerticalAlignment="Center"
                        Margin="10, 0, 0, 0" 
                        FontSize="14" 
                        FontWeight="Normal" 
                        Style="{StaticResource StandaloneButtonTheme}"
                        Click="ButtonOpenFolder_Click" Cursor="Hand"/>
            </StackPanel>
            <!--Secondary mod folder-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0 15 0 0">
                <TextBox x:Name="TextBoxSecondaryFileExplorer"
                         Width="400"
                         Height="25"
                         VerticalContentAlignment="Center"
                         Margin="10, 0, 0, 0"
                         IsReadOnly="True"
                         Style="{StaticResource TextBoxTheme}"/>
                <Button x:Name="ButtonOpenSecondaryFolder" 
                        Content="Open secondary folder"
                        Width="175"
                        Height="25"
                        VerticalAlignment="Center"
                        Margin="10, 0, 0, 0" 
                        FontSize="14" 
                        FontWeight="Normal" 
                        Style="{StaticResource StandaloneButtonTheme}"
                        Click="ButtonOpenSecondaryFolder_Click" 
                        Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <!--Menu buttons-->
        <StackPanel Grid.Row="2"
                    Grid.RowSpan="2"
                    Margin="0,10,0,0"
                    Visibility="Hidden">
            <Button x:Name="ButtonDeploy" Content="Deploy"
                    Height="50"
                    FontSize="14"
                    FontWeight="Normal"
                    Style="{StaticResource MenuButtonTheme}"
                    Cursor="Hand" 
                    Click="ButtonDeploy_Click"
                    Command="{Binding DeployCommand}"/>
            <Button x:Name="ButtonUndo" Content="Undo"
                    Height="50"
                    FontSize="14"
                    FontWeight="Normal"
                    Style="{StaticResource MenuButtonTheme}" 
                    Cursor="Hand" 
                    Click="ButtonUndo_Click"
                    Command="{Binding UndoCommand}"/>
            <Button x:Name="ButtonClearPath" 
                    Content="Clear"
                    Height="50"
                    FontSize="14"
                    FontWeight="Normal"
                    Click="ButtonClearPath_Click"
                    Command="{Binding ClearCommand}"
                    Style="{StaticResource MenuButtonTheme}" Cursor="Hand"/>
            <Button x:Name="ButtonSetRecovery" 
                    Content="Set recovery"
                    Height="50"
                    FontSize="14"
                    FontWeight="Normal"
                    Click="ButtonSetRecovery_Click"
                    Style="{StaticResource MenuButtonTheme}" 
                    Cursor="Hand"/>
            <Button x:Name="ButtonReset" Content="Reset"
                    Height="50"
                    FontSize="14"
                    FontWeight="Normal"
                    Style="{StaticResource MenuButtonTheme}" 
                    Cursor="Hand" 
                    Click="ButtonReset_Click"
                    Command="{Binding ResetCommand}"/>
        </StackPanel>

        <!--Taskbar-->
        <StackPanel Orientation="Vertical"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3">
            <ContentControl Style="{StaticResource DeploymentReminder}"/>
            <StackPanel Margin="10, 10, 0, 0"
                        Orientation="Horizontal">
                <TextBox x:Name="TextBoxGameVersion"
                     Height="25"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     IsReadOnly="False"
                     Style="{StaticResource TextBoxGameVersionTheme}"/>
                <Button Command="{Binding MoveUpCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="&#x1F81D;"
                               FontSize="25"
                               Margin="20 0 0 0"
                               Cursor="Hand"
                               MouseLeftButtonDown="ArrowUp_MouseLeftButtonDown">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Foreground" Value="#69717d"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>
                <Button Command="{Binding MoveDownCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="&#x1F81F;"
                               FontSize="25"
                               Margin="20 0 0 0"
                               Cursor="Hand"
                               MouseLeftButtonDown="ArrowDown_MouseLeftButtonDown">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Foreground" Value="#69717d"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>
                <Button Content="Deploy"
                        Height="25"
                        Width="75"
                        Margin="10 0 0 0"
                        Click="ButtonDeploy_Click"
                        Command="{Binding DeployCommand}"
                        Style="{DynamicResource StandaloneButtonTheme}"/>
                <Button Content="Undo"
                        Height="25"
                        Width="75"
                        Margin="10 0 0 0"
                        Click="ButtonUndo_Click"
                        Command="{Binding UndoCommand}"
                        Style="{DynamicResource StandaloneButtonTheme}"/>
                <Button Content="Clear"
                        Height="25"
                        Width="75"
                        Margin="10 0 0 0"
                        Click="ButtonClearPath_Click"
                        Command="{Binding ClearCommand}"
                        Style="{DynamicResource StandaloneButtonTheme}"/>
            </StackPanel>
        </StackPanel>

        <!--Grid Mod List-->
        <Border Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="3" 
                Background="White" 
                BorderThickness="0" 
                Margin="10">
            <DataGrid x:Name="ModList" 
                      ItemsSource="{Binding Mods}"
                      Style="{DynamicResource DataGridStyle1}" 
                      CellStyle="{DynamicResource DataGridCellStyle1}" 
                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                      RowStyle="{DynamicResource DataGridRowStyle1}"
                      RowDetailsTemplate="{DynamicResource DataGridRowDetailsTemplate1}"
                      Margin="10" 
                      Background="Transparent" 
                      BorderBrush="Transparent"
                      BorderThickness="1"
                      dd:DragDrop.IsDragSource="True" 
                      dd:DragDrop.IsDropTarget="True" 
                      dd:DragDrop.SelectDroppedItems="True" 
                      dd:DragDrop.DropHandler="{Binding}" 
                      dd:DragDrop.DropTargetAdornerBrush="#FF696390"
                      SelectionChanged="ModList_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTemplateColumn MinWidth="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox x:Name="CheckBoxIsEnabled"
                                          IsChecked="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged}" 
                                          Click="CheckBoxIsEnabled_Clicked"
                                          Command="{Binding DataContext.ToggleCheckBoxCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Loadorder" 
                                        IsReadOnly="True" 
                                        MinWidth="100" 
                                        Binding="{Binding LoadOrder}" 
                                        CanUserSort="False"/>
                    <DataGridTextColumn Header="Mod" 
                                        IsReadOnly="True" 
                                        MinWidth="250" 
                                        Binding="{Binding DisplayName}" 
                                        CanUserSort="False"/>
                    <DataGridTextColumn Header="Author" 
                                        IsReadOnly="True" 
                                        MinWidth="200" 
                                        Binding="{Binding Author}" 
                                        CanUserSort="False"/>
                    <DataGridTextColumn Header="Version" 
                                        IsReadOnly="True" 
                                        Width="*"
                                        MinWidth="100"
                                        Binding="{Binding Version}" 
                                        CanUserSort="False"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!--Conflict window-->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="2"
                    Grid.Row="2"
                    Grid.RowSpan="4">
            <ToggleButton x:Name="ToggleButtonConflictWindow"
                          Click="ToggleButtonConflictWindow_Click"
                          Style="{StaticResource ButtonConflictWindowSlider}"/>
            <Border x:Name="BorderConflictWindow"
                    Background="#FFF9F9F9"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Conflict window"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#69717d"
                               FontWeight="Normal"/>
                    <!--Overwrites window-->
                    <Border Grid.Row="2"
                            Grid.Column="0"
                            Background="White"
                            Margin="0 0 10 0">
                        <DataGrid x:Name="DataGridOverwrites"
                                  ItemsSource="{Binding Overwrites}"
                                  Style="{DynamicResource DataGridStyle1}" 
                                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                  RowStyle="{DynamicResource DataGridRowStyle1}" 
                                  Margin="10" 
                                  Background="Transparent" 
                                  BorderBrush="Transparent"
                                  SelectionChanged="DataGridOverwrites_SelectionChanged" 
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Overwrites.."
                                                    Width="*"
                                                    IsReadOnly="True"
                                                    CanUserSort="False"
                                                    Binding="{Binding DisplayName}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <!--Overwritten window-->
                    <Border Grid.Row="4"
                            Grid.Column="0"
                            Background="White"
                            Margin="0 0 10 0">
                        <DataGrid x:Name="DataGridOverwrittenBy"
                                  ItemsSource="{Binding OverwrittenBy}"
                                  Style="{DynamicResource DataGridStyle1}" 
                                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                  RowStyle="{DynamicResource DataGridRowStyle1}" 
                                  Margin="10" 
                                  Background="Transparent" 
                                  BorderBrush="Transparent"
                                  SelectionChanged="DataGridOverwrittenBy_SelectionChanged"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Overwritten by.."
                                                    Width="*"
                                                    IsReadOnly="True" 
                                                    CanUserSort="False"
                                                    Binding="{Binding DisplayName}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <!--Manifest window-->
                    <Border Grid.Row="6"
                            Grid.Column="0"
                            Background="White"
                            Margin="0 0 10 0">
                        <DataGrid ItemsSource="{Binding Conflicts}" 
                                  Style="{DynamicResource DataGridStyle1}" 
                                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                  RowStyle="{DynamicResource DataGridRowStyle1}" 
                                  Margin="10" 
                                  Background="Transparent" 
                                  BorderBrush="Transparent">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Conflicts"
                                                    Width="auto"
                                                    IsReadOnly="True"
                                                    CanUserSort="False"
                                                    Binding="{Binding}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Border>

        </StackPanel>

        <!--Copyright disclaimer-->
        <TextBlock Text="© Maxim Agemans"
                   Grid.Column="0" 
                   Grid.Row="3"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   FontSize="14" 
                   Margin="5, 0, 0, 5" 
                   Foreground="#FFA19BCA"
                   Visibility="Hidden"/>
    </Grid>
</Window>
    

